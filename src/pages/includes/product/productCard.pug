section.product 
  .container.product-container 
    .product-main   
      img.product-main-photo(src="img/product/productCard/1.png", alt="")
      ul.reset-list.product-main-preview
      .product-main-info
        .product-main-info-top 4,8
        h1.reset-title.product-main-info-title Диван тканевый прямой “D-31”
        p.reset-text.product-main-info-text Мини 120 см без ящика Stark синий (Рогожка)
        .product-main-info-price 28 490 руб
        .product-main-info-btns
          button.reset-btn.btn-primary.product-main-info-buy(type="button") Купить в один клик
          button.reset-btn.product-main-info-add(type="button") + Добавить в корзину
    .product-description 
      h3.reset-title.product-description-title Опорный механизм
      p.reset-text.product-description-text.margin Опорный механизм напоминает пантограф, к которому добавили дополнительную секцию. У опорного дивана сиденье «выпрыгивает» вперёд и вытаскивает вторую часть спального места. Заключительный штрих — опустить спинку.
      p.reset-text.product-description-text Этот механизм не портит пол и не боится ковров. Требуется чуть больше силы, чтобы разложить диван, но подросток справится.
    img.product-fig(src='/img/product/productCard/fig.png', alt="Диван в раскрытом состоянии")
    ul.reset-list.product-specifics 
      each el in [{title:'Гарантия',value:'18 месяцев'},{title:'Артикул',value:'AAA41269004'},{title:'Длина',value:'163 см'},{title:'Высота',value:'90 см'},{title:'Глубина',value:'108 см'},{title:'Спальное место',value:'200 см х 125 см'},{title:'Высота посадки',value:'45 см'},{title:'Механизм',value:'Опорный'},{title:'Тип обивки',value:'Рогожка'},{title:'Цвет',value:'Синий'},{title:'Наполнитель',value:'Независимый пружинный блок'},{title:'Материал каркаса',value:'Металл. рама с дерев. латами'},{title:'Количество мест',value:'Двухместные'},{title:'Категория',value:'Прямые тканевые диваны'},{title:'Возврат',value:'Условия'},]
        li.product-specifics-item
          p.reset-text.product-specifics-title= el.title 
          p.reset-text.product-specifics-text= el.value
 
        
      






