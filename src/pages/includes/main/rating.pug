section.section-margin.rating
  .container 
    h2.reset-title.subtitle Высокий рейтинг
    - var ratingImgPath = 'img/main/rating/';
    - var ratingPath1024 = ratingImgPath + '1024/';
    - var ratingPath768 = ratingImgPath + '768/';
    - var ratingPath320 =ratingImgPath + '320/';
    - var ratingImgFormat = '.png';
    ul.reset-list.rating-list  
      each el in [{img:'1', title:'Диван кожаный “R-94”', price:'94 990', rate: '5,0',}, {img:'2', title:'Диван апартековый “T-75”', price:'69 990', rate: '4,9' ,}, {img:'3', title:'Диван тканевый “D-31”', price:'28 490', rate: '4,8',}, {img:'4', title:'Диван велюровый “Y-68”', price:'22 990', rate: '4,8',}, {img:'5', title:'Диван из шинила “W-95”', price:'22 990', rate: '4,8',}, {img:'6', title:'Диван флоковый “G-41”', price:'17 990', rate: '4,8',}, {img:'7', title:'Диван шиниловый “V-43”', price:'19 990', rate: '4,8',}, {img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},{img:'8', title:'Диван велюровый “S-99”', price:'19 990', rate: '4,7',},]
        li.card-full.rating-item
          article.card
            .card-top= el.rate
            .card-img
              picture
                source(srcset=ratingPath320 + el.img + ratingImgFormat media="(max-width: 500px)")
                source(srcset=ratingPath768 + el.img + ratingImgFormat media="(max-width: 900px)")
                source(srcset=ratingPath1024 + el.img + ratingImgFormat media="(max-width: 1200px)")
                source(srcset=ratingImgPath + el.img + ratingImgFormat)
                img(src=ratingImgPath + el.img + ratingImgFormat, alt=el.title)
            .card-content
              h3.reset-title.card-title
                a.reset-link.card-title-link(href="#")= el.title 
              .card-price= el.price + " руб"
              button.reset-btn.btn-secondary.card-content-btn(type="button") Купить
    button.reset-btn.btn-primary.rating-btn-more(type="button") Смотреть больше товаров


